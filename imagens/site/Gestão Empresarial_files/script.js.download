    function pesquisar(url,w,h){
        var newW = w + 100;
        var newH = h + 100;
        var left = (screen.width-newW)/2;
        var top = (screen.height-newH)/2;

        var newwindow = window.open(url, 'name', 'width='+newW+',height='+newH+',left='+left+',top='+top+'directories=no,location=no,menubar=no,scrollbars=yes,status=no,toolbar=no,resizable=no');
        newwindow.resizeTo(newW, newH);

        newwindow.moveTo(left, top);
        newwindow.focus();
        return false;
    }
